<Window x:Class="WpfFungusApp.View.NewDatabaseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFungusApp.View"
        xmlns:DBStore="clr-namespace:WpfFungusApp.DBStore"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#EEEEEE"
        Title="New SQL Database" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Database Provider and Connection" Padding="0,10,0,0" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="0"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" x:Name="_radioButtonSQLite" Content="SQLite" 
                             GroupName="DatabaseProvider"
                             IsChecked="{Binding Path=SelectedDatabaseProvider, Mode=TwoWay, 
                             Converter={StaticResource EnumComparisonConverter},
                             ConverterParameter={x:Static DBStore:DatabaseProvider.SQLite}}"/>

                    <GroupBox Grid.Row="2" Grid.Column="0" Header="Database" Margin="20,0,10,10" Padding="10">
                        <GroupBox.Style>
                            <Style TargetType="GroupBox" BasedOn="{StaticResource GroupBoxStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonSQLite}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </GroupBox.Style>
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto" MinWidth="300"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Location"  HorizontalAlignment="Right"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding SQLite_Folder}" IsReadOnly="True"/>
                            <Button Grid.Row="0" Grid.Column="4" Content="Browse" x:Name="_buttonBrowseSQLiteFolders" Style="{StaticResource Button80Style}" Click="_buttonBrowseSQLiteFolders_Click"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="Name" HorizontalAlignment="Right"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding SQLite_Filename}" />
                        </Grid>
                    </GroupBox>
                </Grid>

                <RadioButton x:Name="_radioButtonMicrosoftSQLServer" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" Content="Microsoft SQL Server" 
                             GroupName="DatabaseProvider"
                             IsChecked="{Binding Path=SelectedDatabaseProvider, Mode=TwoWay, 
                             Converter={StaticResource EnumComparisonConverter},
                             ConverterParameter={x:Static DBStore:DatabaseProvider.MicrosoftSQLServer}}" />

                <Grid Grid.Row="4" Grid.Column="1" Margin="20,0,0,10" HorizontalAlignment="Left">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonMicrosoftSQLServer}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                        <Label Grid.Row="0" Grid.Column="0" Content="Instance" />
                        <Separator Width="10" Height="0"/>
                        <ComboBox Grid.Row="0" Grid.Column="2" x:Name="_comboBoxSqlServerInstances" ItemsSource="{Binding SqlServerInstances}" SelectedIndex="{Binding SelectedSqlServerInstance}" MinWidth="220" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Separator Width="10" Height="0"/>
                        <Button Content="Refresh" x:Name="_buttonRefresh" Style="{StaticResource Button80Style}" Click="_buttonRefresh_Click"/>
                    </StackPanel>
                    <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" Header="Server Logon" Padding="10" HorizontalAlignment="Left" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Row="0" Grid.Column="0" Content="Windows Authentication" 
                                         x:Name="_radioButtonSQLServerWindowsAuthentication"
                                         GroupName="SqlServerAuthentication"
                                         IsChecked="{Binding SQLServer_UseWindowsAuthentication}"/>
                            <RadioButton Grid.Row="2" Grid.Column="0" Content="SQL Server Authentication" 
                                         GroupName="SqlServerAuthentication"/>
                            <Grid Grid.Row="4" Grid.Column="0" Margin="20,0">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonSQLServerWindowsAuthentication}" Value="True">
                                                <Setter Property="IsEnabled" Value="false" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="User Name" HorizontalAlignment="Right"/>
                                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding SQLServer_UserName}" HorizontalAlignment="Left" MinWidth="200"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Password" HorizontalAlignment="Right"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding SQLServer_Password}" HorizontalAlignment="Left" MinWidth="200"/>
                            </Grid>                            
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" Header="Database" Padding="10" Style="{StaticResource GroupBoxStyle}">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto" MinWidth="300"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Location"  HorizontalAlignment="Right"/>
                            <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding SQLServer_Folder}" IsReadOnly="True"/>
                            <Button Grid.Row="0" Grid.Column="4" Content="Browse" x:Name="_buttonBrowseMicrosoftSQLServerFolders" Style="{StaticResource Button80Style}" Click="_buttonBrowseMicrosoftSQLServerFolders_Click"/>
                            <Label Grid.Row="2" Grid.Column="0" Content="Name" HorizontalAlignment="Right"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding SQLServer_Filename}" />
                        </Grid>
                    </GroupBox>
                </Grid>

                <RadioButton x:Name="_radioButtonPostgreSQL" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="5" Content="PostgreSQL" 
                             GroupName="DatabaseProvider"
                             IsChecked="{Binding Path=SelectedDatabaseProvider, Mode=TwoWay, 
                             Converter={StaticResource EnumComparisonConverter},
                             ConverterParameter={x:Static DBStore:DatabaseProvider.PostGreSQL}}"/>

                <Grid Grid.Row="8" Grid.Column="1" Margin="20,0,0,10" >
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonPostgreSQL}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Host IP Address" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right"/>
                    <TextBox Grid.Row="0" Grid.Column="2" x:Name="_textBoxPostgreSQLHost"  Text="{Binding PostgreSQL_Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="275" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <CheckBox Grid.Row="0" Grid.Column="4" IsChecked="{Binding PostgreSQL_UseIPv6}" Content="IPv6"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Port" Style="{StaticResource LabelStyle}" HorizontalAlignment="Right"/>
                    <TextBox Grid.Row="2" Grid.Column="2" x:Name="_textBoxPostgreSQLPort" Text="{Binding PostgreSQL_Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" Header="Server Logon" Padding="10" HorizontalAlignment="Left" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Content="Windows Authentication" 
                                         x:Name="_radioButtonPostgreSQLWindowsAuthentication"
                                         GroupName="PostgreSQLAuthentication"
                                         IsChecked="{Binding PostgreSQL_UseWindowsAuthentication}"/>
                            <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Content="PostgreSQL Authentication" 
                                         GroupName="PostgreSQLAuthentication"/>

                            <Grid Grid.Row="4" Grid.Column="0" Margin="20,0">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonPostgreSQLWindowsAuthentication}" Value="True">
                                                <Setter Property="IsEnabled" Value="false" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="User Name" HorizontalAlignment="Right"/>
                                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding PostgreSQL_UserName}" HorizontalAlignment="Left" MinWidth="200"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Password" HorizontalAlignment="Right"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding PostgreSQL_Password}" HorizontalAlignment="Left" MinWidth="200"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <Label Grid.Row="6" Grid.Column="0" Content="Database Name" />
                    <TextBox Grid.Row="6" Grid.Column="2" x:Name="_textBoxPostgreSQLDatabaseName" Text="{Binding PostgreSQL_DatabaseName}" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </Grid>

                <RadioButton x:Name="_radioButtonMySQL" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="5" Content="MySQL" 
                             GroupName="DatabaseProvider"
                             IsChecked="{Binding Path=SelectedDatabaseProvider, Mode=TwoWay, 
                             Converter={StaticResource EnumComparisonConverter},
                             ConverterParameter={x:Static DBStore:DatabaseProvider.MySQL}}" />

                <Grid Grid.Row="12" Grid.Column="1" Margin="20,0,0,10" HorizontalAlignment="Left">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonMySQL}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Instance" />
                    <ComboBox Grid.Row="0" Grid.Column="2" x:Name="_comboBoxMySQLInstances" ItemsSource="{Binding MySQLInstances}" SelectedIndex="{Binding SelectedMySQLInstance}" MinWidth="220" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Header="Server Logon" Padding="10" HorizontalAlignment="Left" Style="{StaticResource GroupBoxStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Content="Windows Authentication" 
                                         x:Name="_radioButtonMySQLWindowsAuthentication"
                                         GroupName="MySQLAuthentication"
                                         IsChecked="{Binding MySQL_UseWindowsAuthentication}"/>
                            <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Content="MySQL Authentication" 
                                         GroupName="MySQLAuthentication"/>

                            <Grid Grid.Row="4" Grid.Column="0" Margin="20,0">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsChecked, ElementName=_radioButtonMySQLWindowsAuthentication}" Value="True">
                                                <Setter Property="IsEnabled" Value="false" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="User Name" HorizontalAlignment="Right"/>
                                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding MySQL_UserName}" HorizontalAlignment="Left" MinWidth="200"/>
                                <Label Grid.Row="2" Grid.Column="0" Content="Password" HorizontalAlignment="Right"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding MySQL_Password}" HorizontalAlignment="Left" MinWidth="200"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
            <Button x:Name="_buttonOK" Content="OK" Style="{StaticResource Button80Style}" Click="_buttonOK_Click"/>
            <Separator Width="20" Height="0"/>
            <Button x:Name="_buttonCancel" Content="Cancel" Style="{StaticResource Button80Style}" Click="_buttonCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
